{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "MSSQLServer": "Sql Server Connection string here.!"
  },
  "ApiSettings": {
    "Key": "Token Secret Key Here.!"
  },
  "SeriLog": {
    "Using": [ "Serilog.Sinks.MSSqlServer", "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Sql Server Connection string here.!",
          "sinkOptionsSection": {
            "tableName": "Logs",
            "autoCreateSqlTable": true
          },
          "ColumnOptionsSection": {
            "addTimeStamp": true,
            "removeStandardColumns": [ "MessageTempate", "Properties" ],
            "additionalColumns": [
              {
                "ColumnName": "MethodType",
                "DataType": "nvarchar",
                "DataLength": 50
              },
              {
                "ColumnType": "User",
                "DataType": "nvarchar",
                "DataLength": 100
              },
              {
                "ColumnType": "Role",
                "DataType": "nvarchar",
                "DataLength": 50
              },
              {
                "ColumnName": "Details",
                "DataType": "nvarchar",
                "DataLength": 500
              },
              {
                "ColumnType": "Data",
                "DataType": "nvarchar",
                "DataLength": 500
              }
            ]
          }
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
